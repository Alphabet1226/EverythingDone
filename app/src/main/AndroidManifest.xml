<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ywwynm.everythingdone"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".activities.ThingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="user"
            android:theme="@style/EverythingDoneTheme.Things"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.DetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_detail"
            android:screenOrientation="user"
            android:theme="@style/EverythingDoneTheme.Detail"
            android:windowSoftInputMode="adjustResize">
            <intent-filter android:label="@string/title_create_thing">
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="text/plain"/>
                <data android:mimeType="image/*"/>
                <data android:mimeType="video/*"/>
                <data android:mimeType="audio/*"/>
            </intent-filter>
            <intent-filter android:label="@string/title_create_thing">
                <action android:name="android.intent.action.SEND_MULTIPLE"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="image/*"/>
                <data android:mimeType="video/*"/>
                <data android:mimeType="audio/*"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/EverythingDoneTheme.ImageViewer">
        </activity>

        <receiver
            android:name=".receivers.ReminderReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".receivers.ReminderNotificationActionReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
        <receiver
            android:name=".receivers.HabitReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".receivers.HabitNotificationActionReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:theme="@style/EverythingDoneTheme.Settings">
        </activity>

        <activity
            android:name=".activities.AboutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_about"
            android:theme="@style/EverythingDoneTheme.About">
        </activity>

        <receiver
            android:name=".receivers.AutoNotifyReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity
            android:name=".activities.StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:screenOrientation="portrait"
            android:theme="@style/EverythingDoneTheme.Statistic">
        </activity>

        <receiver
            android:name=".receivers.DailyUpdateHabitReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver
            android:name=".receivers.AppUpdateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.AuthenticationActivity"
            android:theme="@style/EverythingDoneTheme.Authentication">
        </activity>

        <activity
            android:name=".activities.HelpActivity"
            android:theme="@style/EverythingDoneTheme.Help"
            android:label="@string/help">
        </activity>

        <receiver android:name=".appwidget.CreateWidget">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_create" />
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>