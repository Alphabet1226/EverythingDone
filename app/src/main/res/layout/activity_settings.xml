<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.ywwynm.everythingdone.activities.SettingsActivity">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_accent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/view_status_bar"
        android:background="@color/app_accent"
        app:contentInsetStart="72dp"
        app:titleTextColor="@color/black_54p"/>

    <View
        android:id="@+id/view_status_bar_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_26p"/>

    <ScrollView
        android:id="@+id/sv_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_card_margin_side"
                android:layout_marginRight="@dimen/settings_card_margin_side"
                android:layout_marginTop="@dimen/settings_card_margin_top"
                app:contentPaddingBottom="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_user_interface_settings"
                    android:drawableLeft="@drawable/ic_user_interface_settings"
                    android:drawablePadding="16dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="14sp"
                    android:text="@string/settings_group_ui"/>

                <LinearLayout
                    android:id="@+id/ll_change_drawer_header_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_drawer_header"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_drawer_header_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:textColor="@color/black_26p"
                        android:textSize="14sp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_twice_back_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="112dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twice_back"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/cb_twice_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_card_margin_side"
                android:layout_marginRight="@dimen/settings_card_margin_side"
                android:layout_marginTop="@dimen/settings_card_margin_top"
                app:contentPaddingBottom="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_ringtone_settings"
                    android:drawableLeft="@drawable/ic_ringtone_settings"
                    android:drawablePadding="16dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="14sp"
                    android:text="@string/settings_group_ringtone"/>

                <LinearLayout
                    android:id="@+id/ll_ringtone_reminder_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/reminder"/>

                    <TextView
                        android:id="@+id/tv_ringtone_reminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/black_26p"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ringtone_habit_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="96dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habit"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_ringtone_habit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/black_26p"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ringtone_goal_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="152dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_ringtone_goal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/black_26p"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_card_margin_side"
                android:layout_marginRight="@dimen/settings_card_margin_side"
                android:layout_marginTop="@dimen/settings_card_margin_top"
                app:contentPaddingBottom="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_data_settings"
                    android:drawableLeft="@drawable/ic_data_settings"
                    android:drawablePadding="16dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="14sp"
                    android:text="@string/settings_group_data"/>

                <TextView
                    android:id="@+id/tv_backup_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/backup"
                    android:textSize="16sp"
                    style="@style/SelectableItemBackground"/>

                <TextView
                    android:id="@+id/tv_restore_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="96dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/restore"
                    android:textSize="16sp"
                    style="@style/SelectableItemBackground"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_card_margin_side"
                android:layout_marginRight="@dimen/settings_card_margin_side"
                android:layout_marginTop="@dimen/settings_card_margin_top"
                app:contentPaddingBottom="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_privacy_settings"
                    android:drawableLeft="@drawable/ic_privacy_settings"
                    android:drawablePadding="16dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="14sp"
                    android:text="@string/settings_group_privacy"/>

                <TextView
                    android:id="@+id/tv_set_password_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/set_private_thing_password"
                    android:textSize="16sp"
                    style="@style/SelectableItemBackground"/>

                <RelativeLayout
                    android:id="@+id/rl_use_fingerprint_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="96dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    style="@style/SelectableItemBackground">

                    <CheckBox
                        android:id="@+id/cb_use_fingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/cb_use_fingerprint"
                        android:layout_toLeftOf="@id/cb_use_fingerprint"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_use_fingerprint_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_fingerprint"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_use_fingerprint_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_fingerprint_to_verify"
                            android:textColor="@color/black_26p"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_card_margin_side"
                android:layout_marginRight="@dimen/settings_card_margin_side"
                android:layout_marginTop="@dimen/settings_card_margin_top"
                android:layout_marginBottom="8dp"
                app:contentPaddingBottom="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_advanced_settings"
                    android:drawableLeft="@drawable/ic_advanced_settings"
                    android:drawablePadding="16dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="14sp"
                    android:text="@string/settings_group_advanced"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="40dp">

                    <LinearLayout
                        android:id="@+id/ll_advanced_auto_notify_as_bt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        style="@style/SelectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_notify"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_advanced_auto_notify_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginLeft="1dp"
                            android:textColor="@color/black_26p"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_auto_notify_help_as_bt"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="end|center_vertical"
                        android:scaleType="center"
                        android:contentDescription="@string/help"
                        android:src="@drawable/act_show_help_info"
                        style="@style/SelectableItemBackground"/>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_ringtone_auto_notify_as_bt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="112dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    style="@style/SelectableItemBackground">

                    <TextView
                        android:id="@+id/tv_ringtone_auto_notify_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_notify_ringtone"
                        android:textSize="@dimen/tv_auto_notify_text_size"/>

                    <TextView
                        android:id="@+id/tv_ringtone_auto_notify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/black_26p"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/actionbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/actionbar"
        android:background="@drawable/actionbar_shadow"/>

</RelativeLayout>
