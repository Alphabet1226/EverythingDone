<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:paddingBottom="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_things_list_widget_configuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/title_activity_things_list_widget_configuration"/>

    <TextView
        android:id="@+id/tv_underway_widget_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableStart="@drawable/drawer_all"
        android:drawableLeft="@drawable/drawer_all"
        android:drawablePadding="16dp"
        android:text="@string/all"
        android:onClick="onClick"
        android:background="@drawable/selectable_item_background"/>

    <TextView
        android:id="@+id/tv_note_widget_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableStart="@drawable/drawer_note"
        android:drawableLeft="@drawable/drawer_note"
        android:drawablePadding="16dp"
        android:text="@string/note"
        android:onClick="onClick"
        android:background="@drawable/selectable_item_background"/>

    <TextView
        android:id="@+id/tv_reminder_widget_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableStart="@drawable/drawer_reminder"
        android:drawableLeft="@drawable/drawer_reminder"
        android:drawablePadding="16dp"
        android:text="@string/reminder"
        android:onClick="onClick"
        android:background="@drawable/selectable_item_background"/>

    <TextView
        android:id="@+id/tv_habit_widget_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableStart="@drawable/drawer_habit"
        android:drawableLeft="@drawable/drawer_habit"
        android:drawablePadding="16dp"
        android:text="@string/habit"
        android:onClick="onClick"
        android:background="@drawable/selectable_item_background"/>

    <TextView
        android:id="@+id/tv_goal_widget_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableStart="@drawable/drawer_goal"
        android:drawableLeft="@drawable/drawer_goal"
        android:drawablePadding="16dp"
        android:text="@string/goal"
        android:onClick="onClick"
        android:background="@drawable/selectable_item_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black_14p"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/app_widget_config_alpha"/>

        <SeekBar
            android:id="@+id/sb_app_widget_alpha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_alpha_header_as_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/selectable_item_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/things_list_config_alpha_header"
            tools:ignore="RelativeOverlap"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_alpha_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_simple_view_as_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/selectable_item_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/things_list_config_simple_view"
            tools:ignore="RelativeOverlap"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_simple_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </RelativeLayout>

</LinearLayout>